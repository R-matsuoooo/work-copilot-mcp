# MCP Configuration Environment Variables
# Copy this file to .env and fill in your actual values

# OAuth2 Authentication (Recommended)
MCP_OAUTH_CLIENT_ID=your_github_oauth_client_id_here
MCP_OAUTH_CLIENT_SECRET=your_github_oauth_client_secret_here

# Personal Access Token (Alternative to OAuth2)
MCP_PERSONAL_ACCESS_TOKEN=your_github_personal_access_token_here

# Logging Configuration
MCP_LOG_LEVEL=info  # Options: error, warn, info, debug, trace

# Development Settings
MCP_DEBUG=false     # Set to true for debugging
MCP_VERBOSE=false   # Set to true for verbose output

# Example values for testing (DO NOT USE IN PRODUCTION):
# MCP_OAUTH_CLIENT_ID=Iv1.1234567890abcdef
# MCP_OAUTH_CLIENT_SECRET=1234567890abcdef1234567890abcdef12345678
# MCP_PERSONAL_ACCESS_TOKEN=ghp_1234567890abcdef1234567890abcdef123456
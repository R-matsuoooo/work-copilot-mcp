# MCP Configuration Environment Variables
# Copy this file to .env and fill in your actual values

# Authentication Configuration
MCP_AUTH_TYPE=PAT
MCP_AUTH_TOKEN=your_personal_access_token_here

# OAuth2.0 Configuration (when using OAuth instead of PAT)
# MCP_OAUTH_CLIENT_ID=your_oauth_client_id
# MCP_OAUTH_CLIENT_SECRET=your_oauth_client_secret
# MCP_OAUTH_REDIRECT_URI=http://localhost:3000/callback
# MCP_OAUTH_SCOPE=repo,user

# Security Settings
MCP_TOKEN_ENCRYPTION=true

# Server Configuration
MCP_SERVER_TIMEOUT=30000
MCP_RETRY_ATTEMPTS=3
MCP_RETRY_DELAY=1000

# GitHub API Configuration
MCP_GITHUB_TIMEOUT=15000

# Logging Configuration
MCP_LOG_LEVEL=info
MCP_LOG_FILE=./logs/mcp.log

# Development Settings
MCP_DEBUG_MODE=false
MCP_VERBOSE_LOGGING=false
MCP_MOCK_ENABLED=false
MCP_MOCK_PORT=3001